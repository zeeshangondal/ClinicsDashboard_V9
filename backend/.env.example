# Database Configuration
DATABASE_URL=sqlite:///craft_ai.db
# For PostgreSQL: postgresql://username:password@localhost/craft_ai
# For MySQL: mysql://username:password@localhost/craft_ai

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_APP=app.py

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=*
# For production, specify allowed origins: https://yourdomain.com,https://www.yourdomain.com

# Application Settings
APP_NAME=Craft AI Dashboard
APP_VERSION=2.1.0

# Security Settings
SECRET_KEY=your-flask-secret-key-change-this-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# WhatsApp API Configuration (Optional)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# SMS API Configuration (Optional)
SMS_API_URL=
SMS_API_TOKEN=

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_API_URL=

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

